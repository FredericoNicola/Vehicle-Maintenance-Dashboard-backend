generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  VIEWER
}

enum Status {
  IN_MAINTENANCE
  COMPLETED
  LATE_PAYMENT
  IN_CIRCULATION
  BROKEN_DOWN
}

model User {
  id       Int       @id @default(autoincrement())
  email    String    @unique
  password String
  role     Role      @default(VIEWER)
  vehicles Vehicle[]
}

model Vehicle {
  id              Int                 @id @default(autoincrement())
  vin             String              @unique
  licensePlate    String
  make            String
  model           String
  year            Int
  manufactureDate DateTime?
  km              Int?
  userId          Int
  maintenanceLogs MaintenanceRecord[]
  user            User                @relation(fields: [userId], references: [id])
  documents       Document[]
  status          Status              @default(IN_CIRCULATION)
  zoneOp          String?
}

model MaintenanceRecord {
  id             Int       @id @default(autoincrement())
  vehicleId      Int
  partnerId      Int?
  serviceType    String
  datePerformed  DateTime
  mileage        Int
  cost           Float
  notes          String?
  nextDueDate    DateTime?
  nextDueMileage Int?
  invoice        String?
  vehicle        Vehicle   @relation(fields: [vehicleId], references: [id])
  partner        Partner?  @relation(fields: [partnerId], references: [id])
}

model Partner {
  id           Int     @id @default(autoincrement())
  nif          String
  phoneNumber  String
  companyName  String
  location     String
  lat          Float?
  lng          Float?
  maintenanceRecords MaintenanceRecord[] // <-- Opposite relation
}

model Document {
  id         Int      @id @default(autoincrement())
  filename   String
  url        String
  uploadedAt DateTime @default(now())
  vehicleId  Int
  vehicle    Vehicle  @relation(fields: [vehicleId], references: [id])
  qrCode     String?
  qrCodeData Json?
}
